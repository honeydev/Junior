{% extends 'base.jinja2' %}
{% block header %}
{% endblock %}
{% block content %}
<div class="container p-4">
  <div class="row justify-content-center">
    <div class="card col-lg-6 col-12">
      <div class="row card-header">
        <div class="mx-auto col-auto">РЕГИСТРАЦИЯ</div>
      </div>
      {% if registration_oauth %}{% set info = 'При пустом пароле вход будет возможен только через OAuth.' %}{% endif %}
      {% include 'components/form_error.jinja2' %}
      <form class="form-horizontal" action="{% if registration_oauth %}{{ url_for('auth.registration_oauth') }}{% else %}{{ url_for('auth.registration') }}{% endif %}" method="post">
        <div class="form-group">
          {{ form.csrf_token }}
          {% for form in form %}
            <div class="row">
              <div class="mx-auto col-11 mt-3">
                {{ form(class_='form-control', placeholder = form.label.text) }}
              </div>
            </div>
          {% endfor %}

          <div class="row">
            <div class="mx-auto col-auto my-3">
              <button type="submit" class="btn btn-success">Зарегистрироваться</button>
            </div>
          </div>
        </div>
      </form>
      </div>
  </div>
  {% if not registration_oauth %}
    {% include 'components/or.jinja2' %}
    {% include 'components/social_login.jinja2' %}
  {% endif %}
</div>
{% endblock %}
